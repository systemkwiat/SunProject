<% include parts/header %>

<div class='container'>
    
    <h1 class='shadow-sm p-3 mb-5 bg-white rounded font-weight-light' style="text-align:center; margin-top:28px;">Create New Sunrise<br></h1>
    
    <div class='row'>


<form method='POST' action="/suns" style="width:40%; margin: 20px auto;">
    <div class='form-group'>
        <label for="title">Title</label>
        <input class="form-control" type="text" placeholder="title" name="sun[title]">
    </div>
    
     <div class='form-group'>
        <label for="image">Image</label>
        <input class="form-control" type="text" placeholder="image URL please" name="sun[img]">
    </div>
    
     <div class='form-group'>
        <label for="title">Data</label>
        <input class="form-control" type="text" placeholder="When did you took a pic ?" name="sun[data]">
    </div>
    
     <div class='form-group'>
        <label for="title">A few worlds about this sunrise</label>
        <textarea name='sun[content]' class="form-control"></textarea>
    </div>
    
    <div class=form-group>
         <button class='btn btn-lg btn-primary btn-block' type="submit">Submit!</button>
    </div>
    
    
    
</form>


</div>
</div>









